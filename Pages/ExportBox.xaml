<Window x:Class="Lab.Pages.ExportBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab.Pages"
        mc:Ignorable="d"
        Title="Выберите" Height="200" Width="200">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,35,0,0" Width="118">
            В каком формате вы
            <LineBreak/>
            хотите создать отчет?
        </TextBlock>
        <StackPanel Margin="0, 75, 0, 0">
            <Button x:Name="EXCELbaton"
                    Height="30"
                    Width="150"
                    Content="Excel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="5"
                    Click="EXCELbaton_Click"/>
            <Button x:Name="PDFbaton"
                    Height="30"
                    Width="150" 
                    Content="PDF" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="5"
                    Click="PDFbaton_Click"/>
        </StackPanel>
    </Grid>
</Window>
