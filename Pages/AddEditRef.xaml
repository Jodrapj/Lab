<Page x:Class="Lab.Pages.AddEditRef"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditRef">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Account Number" Margin="5"/>
            <TextBox Text="{Binding AccountNumber}" Margin="5"/>
            <TextBlock Text="Full Name" Margin="5"/>
            <TextBox Text="{Binding FullName}" Margin="5"/>
            <TextBlock Text="Address" Margin="5"/>
            <TextBox Text="{Binding Address}" Margin="5"/>

            <Button x:Name="SaveBaton" Content="Сохранить" Margin="5" Height="30" Width="150" Click="SaveBaton_Click"/>
            <Button x:Name="BackBaton" Content="Отменить" Margin="5" Height="30" Width="150" Click="BackBaton_Click"/>
        </StackPanel>
    </Grid>
</Page>
